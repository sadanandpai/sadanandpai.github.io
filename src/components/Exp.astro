---
import { experience } from "../config.ts";
---

<article class="resume" data-page="experience">
  <header>
    <h2 class="h2 article-title">Experience</h2>
  </header>

  <section class="timeline">
    <div class="title-wrapper">
      <div class="icon-box">
        <ion-icon name="briefcase-outline"></ion-icon>
      </div>

      <h3 class="h3">Professional</h3>
    </div>

    <ol class="timeline-list">
      {
        experience.professional.map((exp) => (
          <li class="timeline-item">
            <div class="timeline-item-header">
              <h4 class="h4 title">{exp.name}</h4>
              <span class="duration">{exp.duration}</span>
            </div>
            <span class="role">{exp.role}</span>
            <p class="timeline-text">{exp.description}</p>
          </li>
        ))
      }
    </ol>
  </section>

  <section class="timeline">
    <div class="title-wrapper">
      <div class="icon-box">
        <ion-icon name="book-outline"></ion-icon>
      </div>

      <h3 class="h3">Education</h3>
    </div>

    <ol class="timeline-list">
      {
        experience.education.map((edu) => (
          <li class="timeline-item">
            <div class="timeline-item-header">
              <h4 class="h4 title">{edu.name}</h4>
              <span class="duration">{edu.duration}</span>
            </div>
            <p class="timeline-text">{edu.college}</p>
          </li>
        ))
      }
    </ol>
  </section>
</article>

<style>
  .timeline {
    margin-bottom: 100px;

    &:last-child {
      margin-bottom: 20px;
    }
  }

  .timeline .title-wrapper {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 25px;
  }

  .timeline-list {
    font-size: var(--fs-6);
    margin-left: 45px;
  }

  .timeline-item {
    position: relative;
  }

  .timeline-item:not(:last-child) {
    margin-bottom: 40px;
  }

  .timeline-item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 7px;

    .title {
      font-size: var(--fs-4);
      line-height: 1.3;
    }

    .duration {
      color: var(--white-2);
    }
  }

  .timeline-list .role {
    color: var(--vegas-gold);
    font-weight: var(--fw-400);
    line-height: 1.6;
  }

  .timeline-item:not(:last-child)::before {
    content: "";
    position: absolute;
    top: -25px;
    left: -30px;
    width: 1px;
    height: calc(100% + 70px);
    background: var(--jet);
  }

  .timeline-item::after {
    content: "";
    position: absolute;
    top: 6px;
    left: -33px;
    height: 6px;
    width: 6px;
    background: var(--text-gradient-yellow);
    border-radius: 50%;
    box-shadow: 0 0 0 4px var(--jet);
  }

  .timeline-text {
    color: var(--light-gray);
    font-weight: var(--fw-300);
    line-height: 1.6;
  }

  @media (min-width: 580px) {
    .timeline-list {
      margin-left: 65px;
    }

    .timeline-item:not(:last-child)::before {
      left: -40px;
    }

    .timeline-item::after {
      height: 8px;
      width: 8px;
      left: -43px;
    }
  }
</style>
